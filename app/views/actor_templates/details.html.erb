<h1> Director #<%= @the_actor.id %> details </h1>

<a href = "/actors"> Go back </a>
<%= @the_actor.dob %>
<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name %> </dd>
  <dt>Dob</dt>
  <dd><%= @the_actor.dob %> </dd>
  <dt>Bio</dt>
  <dd><%= @the_actor.bio %> </dd>
  <dt>Image</dt>
  <dd> <image src = "<%= @the_actor.image %>" width = "200" </a> </dd>
  <dt>Created at</dt>
  <dd><%= @the_actor.created_at %> </dd>
  <dt>Updated at</dt>
  <dd><%= @the_actor.updated_at%> </dd>
</dl>

<% matching_characters = Character.where({ :actor_id => @the_actor.id})%>
  <table border = "1">
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Character</th>
      <th></th>
    </tr>
    <%matching_characters.each do |a_character|%>
      <tr>
        <td>
        <% matching_movies = Movie.where({:id => a_character.movie_id})%>
        <% the_movie = matching_movies.at(0)%>
        <%= the_movie.title%>
        </td>
        <td>
        <%=the_movie.year%>
        </td>
        <td>
        <% matching_directors = Director.where({:id => the_movie.director_id})%>
        <% the_director = matching_directors.at(0)%>
        <%= the_director.name%>
        </td>
        <%= a_character.name%>
        </td>
        <td>
          <a href = "/movies/<%=the_movie.id%>">
            Show details
          </a>
        </td>
        <td><%=@the_actor.name%></td>
      </tr>
    <%end%>
  </table>
